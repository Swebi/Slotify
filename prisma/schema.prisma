// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Form {
  id          String     @id @unique @default(cuid())
  title       String
  description String
  Response    Response[]
}

model Response {
  id       String @id @unique @default(cuid())
  form     Form   @relation(fields: [formId], references: [id])
  formId   String
  name     String
  regNo    String
  dayOrder String
  freeHour String

  @@unique([regNo, dayOrder, freeHour])
}
